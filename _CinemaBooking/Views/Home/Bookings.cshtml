@model IEnumerable<_CinemaBooking.ViewModels.BookingViewModel>

<h2>Мої бронювання</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Фільм</th>
                <th>Зал</th>
                <th>Дата сеансу</th>
                <th>Час початку</th>
                <th>Ряд</th>
                <th>Місце</th>
                <th>Статус</th>
                <th>Дата бронювання</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.FilmTitle</td>
                    <td>@booking.HallName</td>
                    <td>@booking.DateSession</td>
                    <td>@booking.StartTime</td>
                    <td>@booking.Row</td>
                    <td>@booking.Seat</td>
                    <td>@booking.Status</td>
                    <td>@booking.CreatedAt.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>У вас немає активних бронювань.</p>
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #0D0D0D;
        color: #FFFFFF;
    }

    h2 {
        text-align: center;
        margin: 24px 0;
        color: #FF6347;
        font-size: 36px;
    }

    .table {
        width: 90%;
        margin: 0 auto 20px;
        border-collapse: collapse;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        overflow: hidden;
    }

        .table th,
        .table td {
            padding: 12px 15px;
            text-align: center;
        }

        .table th {
            background-color: #FF6347;
            color: #FFFFFF;
            text-transform: uppercase;
            font-size: 18px;
            letter-spacing: 0.1em;
        }

        .table td {
            background-color: #1A1A1A;
            color: #F2F2F2;
            font-size: 18px;
            border-bottom: 1px solid #333333;
        }

        .table tr:nth-child(even) td {
            background-color: #121212;
        }

        .table tr:hover td {
            background-color: #FF6347;
            color: #0D0D0D;
            transition: all 0.3s ease;
        }

    .text-center {
        text-align: center;
        font-size: 20px;
        color: #FF6347;
        padding: 20px 0;
    }
</style>
