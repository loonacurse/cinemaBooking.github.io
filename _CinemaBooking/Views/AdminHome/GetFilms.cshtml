@model IEnumerable<_CinemaBooking.Models.Film>
@{
    var successMessage = TempData["Success"] as string;
    var errorMessage = TempData["Error"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}
@{
    ViewBag.Title = "Всі фільми";
}

<div class="container mt-4">
    <h1>Список фільмів</h1>

    @if (!Model.Any())
    {
        <p>Фільмів не знайдено.</p>
    }
    else
    {
<div class="film-grid">
    @foreach (var film in Model)
    {
        <div class="film">
            <div class="film-content">
                @if (!string.IsNullOrEmpty(film.ImageUrl))
                {
                    <img src="@film.ImageUrl" alt="@film.Title poster" class="film-poster" />
                }
                <div class="film-details">
                    <h3>@film.Title</h3>
                    <p><strong>Опис:</strong> <span class="film-description">@film.Description_film</span></p>
                    <p><strong>Тривалість:</strong> <span class="film-text">@film.Duration</span></p>
                    <p><strong>Жанр:</strong> <span class="film-text">@film.Genre</span></p>
                    <p><strong>Рейтинг:</strong> <span class="film-text">@film.Rating</span></p>
                    <h4>Сеанси:</h4>
                    <ul>
                        @foreach (var session in film.Sessions)
                        {
                            <li>
                                <p>Дата: @session.Date_session.ToShortDateString(), Час: @session.StartTime - @session.EndTime</p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="button-group">
                <form action="@Url.Action("ConfirmDelete", "AdminHome", new { id = film.IdFilm })" method="get" class="button-full-width">
                    <button type="submit" class="btn btn-danger">Видалити</button>
                </form>
                <form action="@Url.Action("UpdateFilm", "AdminHome", new { id = film.IdFilm })" method="get" class="button-full-width">
                    <button type="submit" class="btn btn-danger">Оновити</button>
                </form>
                <form action="@Url.Action("AddSession", "AdminHome", new { id = film.IdFilm })" method="get" class="button-full-width">
                    <button type="submit" class="btn btn-danger">Додати сеанс</button>
                </form>
            </div>
        </div>
    }

    <div class="film add-film">
        <a href="@Url.Action("AddFilm", "AdminHome")" class="add-film-link">
            <div class="add-film-content">
                <span class="plus-symbol">+</span>
                <span class="add-film-text">Додати фільм</span>
            </div>
        </a>
    </div>
</div>
    }
</div>
<style>
    body {
        font-family: Arial, sans-serif;    }

    .film-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
        gap: 20px;
    }

    .film {
        background: #F2F2F2;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        padding: 15px; 
        display: flex;
        flex-direction: column;
    }

        .film:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.75);
        }

    h1 {
        margin: 20px;
        text-align: center;
        color: #FF6347;
        font-size: 38px;
    }

    .film-text {
        color: #0D0D0D;
    }

    .film-description {
        color: #0D0D0D;
    }

    .film-content {
        display: flex;
        flex-direction: row;
        gap: 15px;
    }

    .film-poster {
        width: 200px;
        height: 300px;
        object-fit: cover;
        border-radius: 8px;
    }

    .film-details {
        display: flex;
        flex-direction: column;
        justify-content: space-between; 
    }

    p {
        color: #0D0D0D;
        margin: 5px 0; 
    }

    .film-details h3 {
        font-weight: bold;
        color: #FF6347;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .film-details h4 {
        margin: 5px 0; 
        color: #FF6347;
    }

    .film-details ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .film-details ul li {
            margin-bottom: 5px;
            color: #0D0D0D;
        }

    .session-link {
        color: #FF6347;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease, text-decoration 0.3s ease;
    }

        .session-link:hover {
            color: #0D0D0D;
            text-decoration: underline;
        }

    .button-group {
        display: flex;
        flex-direction: row;
        gap: 5px; 
        gap: 10px; 
        margin-top: auto; 
    }

    .button-full-width {
        width: 100%;
    }

        .button-full-width button {
            width: 100%;
            padding: 10px;
            text-align: center;
            font-size: 14px;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            background: #FF6347;
            color: #f1f1f1;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .button-full-width button:hover {
                background-color: #FF4500;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }
    .add-film {
        display: flex;
        justify-content: center;
        align-items: center;
        background: #FFF;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        color: #FF6347;
        font-size: 24px;
        font-weight: bold;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        text-align: center;
    }

        .add-film:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.75);
        }

    .add-film-link {
        display: flex;
        justify-content: center;
        align-items: center;
        text-decoration: none;
        color: #FF6347;
        width: 100%;
        height: 100%;
        background: #FFF;
        border-radius: 10px;
    }

    .add-film-content {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .plus-symbol {
        font-size: 48px;
        margin-bottom: 10px;
        color: #FF6347; 
    }

    .add-film-text {
        font-size: 18px;
        font-weight: normal;
        color: #FF6347;
    }


</style>
