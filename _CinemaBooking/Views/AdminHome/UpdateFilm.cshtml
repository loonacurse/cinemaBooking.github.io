
@model _CinemaBooking.Models.Film

@using (Html.BeginForm("UpdateFilm", "AdminHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h1>Оновити фільм</h1>
    <div class="form-group">
        <label for="Title" class="control-label">Назва:</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control input-field", placeholder = "Enter film title" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Description_film" class="control-label">Опис:</label>
        @Html.TextAreaFor(m => m.Description_film, new { @class = "form-control input-field", placeholder = "Enter film description" })
        @Html.ValidationMessageFor(m => m.Description_film, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Duration" class="control-label">Тривалість:</label>
        @Html.TextBoxFor(m => m.Duration, new { @class = "form-control input-field", placeholder = "Enter film duration (HH:mm)" })
        @Html.ValidationMessageFor(m => m.Duration, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Genre" class="control-label">Жанр:</label>
        @Html.TextBoxFor(m => m.Genre, new { @class = "form-control input-field", placeholder = "Enter film genre" })
        @Html.ValidationMessageFor(m => m.Genre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Rating" class="control-label">Рейтинг:</label>
        @Html.TextBoxFor(m => m.Rating, new { @class = "form-control input-field", placeholder = "Enter film rating (e.g. 7.2)" })
        @Html.ValidationMessageFor(m => m.Rating, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="ImageUrl" class="control-label">URL Постеру:</label>
        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control input-field", placeholder = "Enter image URL" })
        @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Оновити фільм</button>
    </div>
}
<style>
    body {
        background-color: #f4f4f4;
        font-family: Arial, sans-serif;
    }

    .form-container {
        width: 70%;
        max-width: 500px;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .input-field {
        width: 100%;
        max-width: 600px;
        padding: 10px;
        font-size: 14px;
        border-radius: 6px;
        border: 1px solid #ccc;
        background-color: #fff;
        box-sizing: border-box;
        display: block;
        margin: 0 auto;
    }

    .input-field:focus {
        border-color: #FF6347;
        outline: none;
    }

    .btn {
        padding: 12px;
        border-radius: 6px;
        font-size: 16px;
        width: auto;
        margin-top: 20px;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .btn-primary {
        background-color: #FF6347;
        border: none;
        color: white;
    }

    .btn-primary:hover {
        background-color: #e55347;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        color: white;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn:hover {
        cursor: pointer;
    }

    .text-danger {
        color: #FF6347;
    }

    label {
        text-align: center;
        display: block;
        font-size: 16px;
