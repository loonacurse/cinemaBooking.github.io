        color: #f1f1f1;
    }

    .page-title {
        text-align: center;
        color: #FF6347;
        font-size: 32px;
        margin-bottom: 20px;
    }

    .form-header {
        margin-bottom: 20px;
        text-align: center;
    }

    .form-header h1 {
        color: #FF6347;
        font-size: 36px;
    }

    .form-container .btn-primary {
        background-color: #FF6347;
        border: none;
